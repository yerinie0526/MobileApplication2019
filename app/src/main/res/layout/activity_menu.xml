<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/addFoodMenu"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#008F7758"
                android:onClick="onClick"
                android:text="단일 메뉴 추가"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addGroupMenu"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#008F7758"
                android:onClick="onClick"
                android:text="나만의 꿀조합 추가"
                android:textSize="20sp" />

            <Button
                android:id="@+id/myHomeMenu"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#008F7758"
                android:onClick="onClick"
                android:text="나의 홈"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btninformation"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#00A87979"
                android:onClick="onClick"
                android:text="정보"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>